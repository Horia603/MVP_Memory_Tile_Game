<Window x:Class="MVP_Tema_1.GamesSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVP_Tema_1"
        mc:Ignorable="d"
        Title="GamesSelectionWindow" Height="800" Width="1000">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,70,0,0" TextWrapping="Wrap" Text="Select the game you want to load" VerticalAlignment="Top" FontSize="35" FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,180,0,0" TextWrapping="Wrap" Text="Game index:                  Current level:                  Board size:" VerticalAlignment="Top" Width="900" FontSize="30" TextAlignment="Center"/>
        <ScrollViewer x:Name="Viewer" VerticalScrollBarVisibility="Auto" Margin="10,250,10,50" >
            <Grid>
                <Grid x:Name="Table" Margin="10,150,10,50" />
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
