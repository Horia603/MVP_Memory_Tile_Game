<Window x:Class="MVP_Tema_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVP_Tema_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid>
        <Image  x:Name="ProfilePicture" HorizontalAlignment="Left" Height="200" Margin="610,100,0,0" VerticalAlignment="Top" Width="200" Stretch="UniformToFill"/>
        <Button x:Name="NewGameButton"  Content="New Game" HorizontalAlignment="Left" Margin="80,100,0,0" VerticalAlignment="Top" Height="85" Width="180"/>
        <Button x:Name="LoadGameButton"  Content="Load Game" HorizontalAlignment="Left" Margin="80,250,0,0" VerticalAlignment="Top" Height="85" Width="180"/>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Margin="80,400,0,0" VerticalAlignment="Top" Height="85" Width="180"/>
        <ComboBox x:Name="UserSelector" HorizontalAlignment="Left" Margin="610,360,0,0" VerticalAlignment="Top" Width="200" Height="35" FontSize="20" Text="Select User" IsEditable="True" MaxDropDownHeight="150" SelectionChanged="UserName_SelectionChanged"/>
    </Grid>
</Window>
